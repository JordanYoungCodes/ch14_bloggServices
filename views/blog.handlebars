<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{post}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div>
  <h3>Create a new comment</h3>
  <form class="form new-comment-form" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-input" type="text" id="title" name="title" required />
    </div>
    <div class="form-group">
      <label for="comment">Comment:</label>
      <textarea class="form-input" id="comment" name="comment" required></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<h2>Comments:</h2>
<div class="comment-list">
  {{#each comments as |comment|}}

  <div class="comment">
    <p>Title: {{comment.title}}</p>
    <p>Comment: {{comment.comment}}</p>
    <p>Created on: {{format_date comment.date_created}}</p>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>


<script src="/js/comment.js"></script>