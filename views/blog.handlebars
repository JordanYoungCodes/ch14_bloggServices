<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{post}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>


<div>
    <h3>Create a new comment</h3>
    <form class="form new-comment-form"></form>
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      <div class="form-group">
        <label for="comment-desc">Comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
</div>

  <h2>Comments:</h2>
  {{#each comments as |comment|}}
  <div class="comment-list">
    <p>Title: {{title}}</p>
    <p>Comment:  {{comment}}</p>
    <p>Crated on: {{format_date date_created}}</p>
  </div>
  {{/each}}